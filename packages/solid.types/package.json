{
  "name": "@solidstudio/solid.types",
  "version": "1.0.1",
  "description": "Package with the types of Solid Studio",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "npm-run-all -p clean:*",
    "clean:dist": "rimraf dist",
    "clean:cov": "rimraf coverage",
    "test": "jest test/",
    "test:coverage": "npm run test -- --coverage",
    "check-formatting": "prettier --list-different 'src/**/*.{ts,ts,js,json}'",
    "prettier": "prettier --write 'src/**/*.{ts,tsx,js,json}'",
    "tslint": "./node_modules/.bin/tslint -p . -c tslint.json",
    "tslint:fix": "./node_modules/.bin/tslint -p . -c tslint.json --fix",
    "tslint:ci": "npm run tslint -- -t json -o report-lint.json"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:solid-studio/solid.types.git"
  },
  "author": "Labchain",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.5",
    "jest": "^25.0.0",
    "prettier": "^1.18.2",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/*.{ts,js}",
      "src/**/*.{ts,js}",
      "!types/**",
      "!test/**",
      "!src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {}
}
